{
  "name": "nanoevents",
  "version": "5.1.10",
  "description": "Simple and tiny (72 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "scripts": {
    "test": "jest --coverage && eslint . && check-dts && size-limit --highlight-less && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": ">=6.0.0"
  },
  "sideEffects": false,
  "types": "./index.d.ts",
  "devDependencies": {
    "@logux/eslint-config": "^42.2.1",
    "@logux/sharec-config": "^0.8.4",
    "@size-limit/dual-publish": "^4.7.0",
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "check-dts": "^0.4.0",
    "dual-publish": "^0.11.0",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "size-limit": "^4.7.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "yaspeller": "^7.0.0"
  },
  "size-limit": [
    {
      "import": "{ createNanoEvents }",
      "limit": "72 B"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "gzipped",
      "EventEmitter",
      "js",
      "ES",
      "CDN",
      "npm",
      "JSDoc",
      "JS",
      "supports ES",
      "bundlers",
      "workaround"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.4"
  }
}
