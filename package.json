{
  "name": "nanoevents",
  "version": "6.0.2",
  "description": "Simple and tiny (99 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "scripts": {
    "unit": "tsm node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
    "test": "c8 yarn unit && eslint . && check-dts && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.0",
    "@size-limit/preset-small-lib": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "c8": "^7.10.0",
    "check-dts": "^0.6.4",
    "clean-publish": "^3.4.3",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.3.1",
    "size-limit": "^7.0.1",
    "ts-jest": "^27.0.7",
    "tsm": "^2.1.4",
    "typescript": "^4.5.2",
    "uvu": "^0.5.2"
  },
  "size-limit": [
    {
      "import": "{ createNanoEvents }",
      "limit": "99 B"
    }
  ],
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
