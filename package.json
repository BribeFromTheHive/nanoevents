{
  "name": "nanoevents",
  "version": "5.1.8",
  "description": "Simple and tiny (72 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/",
    "test": "jest-ci --coverage && eslint-ci . && check-dts && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": ">=6.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@logux/eslint-config": "^39.0.3",
    "@logux/sharec-config": "^0.7.3",
    "@size-limit/dual-publish": "^4.5.1",
    "@size-limit/preset-small-lib": "^4.5.1",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "check-dts": "^0.3.1",
    "dual-publish": "^0.10.5",
    "eslint": "^7.3.1",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettierx": "^0.12.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^20.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.2.11",
    "rimraf": "^3.0.2",
    "size-limit": "^4.5.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.2",
    "yaspeller-ci": "^1.0.2"
  },
  "size-limit": [
    {
      "import": "{ createNanoEvents }",
      "limit": "72 B"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "gzipped",
      "EventEmitter",
      "js",
      "ES",
      "CDN",
      "npm",
      "JSDoc",
      "JS",
      "supports ES",
      "bundlers",
      "workaround"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.3"
  }
}
